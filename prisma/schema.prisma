generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  SUPERVISOR
  ADVISOR
}

enum Status {
  NEW
  IN_PROCESS
  ANSWERED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(ADVISOR)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  assignedEmails Email[]
}

model Email {
  id              String   @id @default(cuid())
  googleId        String   @unique
  subject         String
  snippet         String?
  from            String
  date            DateTime
  attachmentCount Int      @default(0)
  status          Status   @default(NEW)
  
  assigneeId      String?
  assignee        User?    @relation(fields: [assigneeId], references: [id])

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
